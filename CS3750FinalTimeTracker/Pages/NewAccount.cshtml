@page
@model CS3750FinalTimeTracker.Pages.NewAccountModel
@{
}

<form method="post" class="text-center" asp-action="Tracker">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">


            <div class="col-12 px-3 mt-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-dark">Create Account</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label>Username</label>
                    </div>
                    <div class="col-9">
                        <input type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label>Password</label>
                    </div>
                    <div class="col-9">
                        <input type="text" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label>Create New Group</label>
                    </div>
                    <div class="col-9">
                        <input type="text" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label>Join existing group</label>
                    </div>
                    <div class="col-9">

                    </div>
                </div>
            </div>

            <button class="btn btn-lg btn-primary btn-block text-uppercase form-control center-screen">
                <a class="nav-link text-white text-center" asp-area="" asp-page="/Tracker">Submit</a>
            </button>

        </div>

    </div>
</form>

@section Scripts{
    <script src="~/js/tracker.js"></script>
}