@page
@model CS3750FinalTimeTracker.Pages.CreateGroupModel


<form method="post" asp-action="NewAccount">

    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">

            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>

            <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                <h2 class="text-primary">Create A New Group</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="GroupObj.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="GroupObj.Name" />
                        <span class="text-danger" asp-validation-for="GroupObj.Name"></span>
                    </div>
                    @if (Model.GroupObj.Id != 0)
                    {
                        <input type="hidden" asp-for="GroupObj.Id" />
                    }
                </div>
               
                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

